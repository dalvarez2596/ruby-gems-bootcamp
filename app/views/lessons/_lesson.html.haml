.card
  .card-header
    = link_to lesson.title, lesson
  .card-body
    = lesson.content
    = lesson.course
  .card-footer
    = link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-sm btn-warning'
    = link_to 'Destroy', lesson, data: { turbo_method: :delete, confirm: 'Are you sure' }, class: 'btn btn-sm btn-danger'
  
